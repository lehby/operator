                {{item.problem}}
            </view>
        </view>
        <form bindsubmit="formSubmit">
            <view class="page-section">
                <view class="textarea-wrp">
                    <textarea auto-focus="true"  placeholder="具体描述一下问题所在" />
                </view>
            </view>
            <button class="submit" formType="submit" bindtap="Submit">提交</button>
        </form>
    </view>
