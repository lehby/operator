
.input_width{
  width: 750rpx;
display: flex;
flex-direction: row;
justify-content: space-between;
}
.text_color{
  background-color: #3c75dd;
  width: 20%;
  font-size: 50rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 底部导航条 */
.fonter_head{
  display: flex;
  justify-content:space-around;
  background-color: white;
  width: 750rpx;
  position:fixed;
  bottom: 0;
  left: 0;
  padding: 6rpx;
}
.fonter{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  align-items: center;
}
.fonter image{
  width: 60rpx;
  height: 60rpx;
}