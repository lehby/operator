        <view class="gastotal_bottom_left">
            <view class="phoneOrder">
                <image src="../../imgs/Answer.png" />
                <view >打电话维修订单</view>
            </view>
            <view class="phoneOrder_num">111,111,00</view>
        </view>
        <view class="gastotal_bottom_right">
             <view class="phoneOrder">
                <image src="../../imgs/system.png" />
                <view >系统维修订单</view>
            </view>
            <view class="phoneOrder_num">111,111,00</view>
        </view>
    </view>
</view>