
.Order_status{
    height: 380rpx;
    padding: 0 20rpx;
    background-color: #fff;
}
.Order_status_top{
    height: 104rpx;
    border-bottom: 2rpx solid #f5f5f5;
    line-height: 104rpx;
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    
}
.Order_status_middle{
    height: 182rpx;
    font-size: 28rpx;
    display: flex;
    border-bottom: 2rpx solid #f5f5f5;
}
.middle_left{
    width: 48rpx;
    height: 182rpx;
}
.img_address{
    margin-top: 66rpx;
}
.img_address>image{
    width: 48rpx;
    height: 48rpx;
}
.middle_right{
    height: 182rpx;
}
.middle_right_top{
    height: 66rpx;
    line-height: 66rpx;
    display: flex;
    justify-content: space-between;
}
.Order_status_bottom{
    display: flex;
    height: 82rpx;
    font-size: 28rpx;
}
.bottom_left{
    width: 48rpx;
    height: 82rpx;
}
.img_clock{
    margin-top: 16rpx;
}
.img_clock>image{
    width: 48rpx;
    height: 48rpx;
}
.bottom_right{
    width: 662rpx;
    height: 82rpx;
    line-height: 82rpx;
    display: flex;
    justify-content: space-between;
}
.table{
    margin-top: 24rpx;
    height: 320rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    background: #fff;
}
.table>text{
    height: 76rpx;
}
.th{
    height: 60rpx;
    background-color: #eee;
    display: flex;
}
.td{
    height: 84rpx;
    outline: 2rpx solid #eee;
    display: flex;
}
.th_within{
    width: 25%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}
.td_witdin{
    width: 25%;
    height: 84rpx;
    line-height: 84rpx;
    text-align: center;
}
.payment{
    padding: 0 20rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
}
.details{
    margin-top: 24rpx;
    background-color: #fff;
    padding: 0 20rpx;
    height: 270rpx;
    font-size: 28rpx;
    border-bottom:2rpx solid #f5f5f5;
}
.details>view{
    height: 50rpx;
    line-height: 50rpx;
}
.btnlist{
    padding: 0 20rpx;
    height: 90rpx;
    background-color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: flex-end;
}
.btn{
    width: 192rpx;
    height: 60rpx;
    border-radius: 50rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 8rpx;
}
.cancel{
    border:2rpx solid;
    margin-right: 20rpx;
}
.confirm{
    background-color: #0F59BD;
    color: #fff;
}